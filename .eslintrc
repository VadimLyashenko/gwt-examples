{
    "env": {
        "browser": true,
        "node": true
    },
    "globals": {
        "app": "writable"
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "ignorePatterns": "src/js/libs",
    "plugins": [
        "@html-eslint"
    ],
    "overrides": [
        {
            "files": [
                "*.ejs"
            ],
            "parser": "@html-eslint/parser",
            "extends": [
                "plugin:@html-eslint/recommended"
            ],
            "rules": {
                "@html-eslint/require-doctype": 0,
                "@html-eslint/require-meta-charset": 2,
                "@html-eslint/no-target-blank": 1,
                "@html-eslint/require-button-type": 1,
                "@html-eslint/require-meta-description": 1,
                "@html-eslint/no-skip-heading-levels": 1,
                "@html-eslint/no-positive-tabindex": 1,
                "@html-eslint/no-aria-hidden-body": 2,
                "@html-eslint/no-accesskey-attrs": 2
            }
        }
    ],
    "rules": {
        "array-callback-return": 2,
        "no-constant-binary-expression": 2,
        "no-constructor-return": 2,
        "no-duplicate-imports": 2,
        "no-promise-executor-return": 2,
        "no-self-compare": 2,
        "no-template-curly-in-string": 1,
        "no-unmodified-loop-condition": 1,
        "no-unused-private-class-members": 1,
        "no-use-before-define": [2, {"functions": false, "classes": false}],
        "eqeqeq": 2,
        "semi": 2,
        "quotes": [2, "single"],
        "indent": [2, 4, {"SwitchCase": 1}],
        "object-curly-spacing": 2,
        "prefer-const": 1,
        "comma-dangle": [2, "always-multiline"],
        "no-eval": 2,
        "no-extend-native": 1,
        "curly": [2, "all"],
        "no-else-return": 1,
        "no-empty-function": 2,
        "no-eq-null": 2,
        "no-extra-parens": 2,
        "no-labels": 1,
        "no-new": 2,
        "no-new-func": 2,
        "no-new-wrappers": 2,
        "no-loss-of-precision": 2,
        "max-classes-per-file": 2,
        "no-extra-bind": 2,
        "no-implicit-coercion": 2,
        "no-implicit-globals": 2,
        "no-implied-eval": 2,
        "no-lone-blocks": 2,
        "no-multi-spaces": 2,
        "no-return-await": 2,
        "no-unused-expressions": [
            2,
            {
                "allowShortCircuit": true,
                "allowTernary": true
            }
        ],
        "no-unused-vars": [
            2,
            {
                "vars": "local",
                "args": "none",
                "caughtErrors": "none"
            }
        ],
        "no-useless-call": 2,
        "no-useless-concat": 2,
        "no-useless-return": 2,
        "no-void": 2,
        "radix": 2,
        "wrap-iife": [2, "inside"],
        "no-label-var": 2,
        "no-undef-init": 2,
        "array-bracket-newline": [2, "consistent"],
        "array-bracket-spacing": [2, "never"],
        "array-element-newline": [2, "consistent"],
        "brace-style": 2,
        "comma-spacing": 2,
        "comma-style": 2,
        "computed-property-spacing": 2,
        "consistent-this": [2, "self"],
        "eol-last": 2,
        "func-call-spacing": 2,
        "func-name-matching": 2,
        "func-style": [
            2,
            "declaration",
            {
                "allowArrowFunctions": true
            }
        ],
        "function-call-argument-newline": [2, "never"],
        "function-paren-newline": [2, "multiline"],
        "implicit-arrow-linebreak": 2,
        "key-spacing": 2,
        "keyword-spacing": 2,
        "linebreak-style": 2,
        "lines-between-class-members": [
            2,
            "always",
            {
                "exceptAfterSingleLine": true
            }
        ],
        "multiline-ternary": [2, "always-multiline"],
        "new-cap": [2, {"properties": false}],
        "new-parens": 2,
        "newline-per-chained-call": 2,
        "no-array-constructor": 2,
        "no-lonely-if": 2,
        "no-multiple-empty-lines": [
            2,
            {
                "max": 2,
                "maxEOF": 0,
                "maxBOF": 0
            }
        ],
        "no-new-object": 2,
        "no-tabs": 2,
        "no-unneeded-ternary": 2,
        "no-whitespace-before-property": 2,
        "nonblock-statement-body-position": 2,
        "object-curly-newline": 2,
        "object-property-newline": [2, {"allowAllPropertiesOnSameLine": true}],
        "one-var": [2, "never"],
        "one-var-declaration-per-line": 2,
        "operator-assignment": 2,
        "padded-blocks": [2, "never"],
        "quote-props": [2, "as-needed"],
        "semi-spacing": 2,
        "semi-style": 2,
        "space-before-blocks": 2,
        "space-before-function-paren": [
            2,
            {
                "anonymous": "never",
                "named": "never",
                "asyncArrow": "always"
            }
        ],
        "space-in-parens": 2,
        "space-unary-ops": 2,
//        "spaced-comment": [
//            2,
//            "always",
//            {
//                "exceptions": [
//                    "-+"
//                ]
//            }
//        ],
        "switch-colon-spacing": 2,
        "arrow-body-style": 2,
        "arrow-parens": [2, "as-needed"],
        "arrow-spacing": 2,
        "no-useless-computed-key": 2,
        "no-useless-constructor": 2,
        "no-useless-rename": 2,
        "no-var": 2,
        "rest-spread-spacing": 2,
        "template-curly-spacing": 2
    }
}
